<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="1dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_weight="0.10"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/ivCoverEdiciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tvIdEdiciones"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="ID" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="97dp"
                android:layout_weight="0.80"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tvTitleEdiciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pravin Radio"
                    android:textColor="@android:color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:text="Volumen: "
                        android:textColor="@android:color/black"
                        android:textSize="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvVolEdiciones"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:text="Sin descripcion"
                        android:textSize="10sp" />
                </LinearLayout>
                <!-- android:singleLine="true" -->


                <LinearLayout
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:text="Número: "
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNumEdiciones"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:text="Sin descripcion"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:layout_width="66dp"
                        android:layout_height="wrap_content"
                        android:text="Año: "
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvYearEdiciones"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:maxEms="10"
                        android:singleLine="true"
                        android:text="Sin descripcion"
                        android:textSize="10sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvDoiEdiciones"
                    android:layout_width="233dp"
                    android:layout_height="wrap_content"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:text="Sin descripcion"
                    android:textSize="10sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>